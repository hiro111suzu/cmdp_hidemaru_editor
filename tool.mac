//.. 関連するメール検索
related_mail_search:
	loaddll "TKInfo.dll";
	$subj = dllfuncstr( "CurrentHeader", "Subject" );
	while ( true ) {
		#flg = false;
		$subj_l = tolower( $subj );
		if (
			strstr( $subj_l, "re:" ) == 0 || 
			strstr( $subj_l, "fw:" ) == 0
		) {
			$subj = midstr( $subj, 3 );
			#flg = true;
		} else if ( strstr( $subj_l, "fwd:" ) == 0 ) {
			$subj = midstr( $subj, 4 );
			#flg = true;
		}
		if ( strstr( $subj, " " ) == 0 ) {
			$subj = midstr( $subj, 1 );
			#flg = true;
		}
		if ( #flg == false ) break;
	}
	if ( $subj == "" ) {
		message "メールサブジェクトが見つかりません";
		endmacro;
	}
	#n = dllfunc(
		"SetFindPack" ,
		"(\"" + dllfuncstr( "YenEncode", $subj ) + "\", target=subject)"
	);
	#n = dllfunc( "StartDoGrep", "", "", 1, $arg );
endmacro;

