//.. quote
quote:
	if ( ! selecting ) {
		selectword;
	}
	$term = getarg(1);
	if ( $term == "" ) {
		$left = "'";
		$right = "'";
	} else {
		#split = strstr( $term, " " );
		if ( #split == -1 ) {
			$left  = $term;
			$right = $term;
		} else {
			$left  = leftstr( $term, #split );
			$right = midstr( $term, #split + 1 );
		}
	}

	#x1 = seltopcolumn;
	#y1 = seltoplineno;
	#x2 = selendcolumn;
	#y2 = selendlineno;
	escape; //- 選択解除

	begingroupundo;

	movetolineno #x2 + 1, #y2;
	insert $right;
	movetolineno #x1 + 1, #y1;
	insert $left;
	beginsel;
	movetolineno #x2 + 2, #y1;
	endsel;

	endgroupundo;
endmacro;

//.. foldmode 折りたたみモード
foldmode:
	setcompatiblemode 0x0f;
	enabledraw;
	disablebreak;

	title "＝＝＝＝＝＝＝＝＝＝ 折りたたみ操作モード [H]ヘルプ [Esc]終了 ＝＝＝＝＝＝＝＝＝＝"; 
	while (1) {
		#k = keypressed;
		if ( #k == 0x26 ) up;  			// [↑]
		else if ( #k == 0x28 ) down; 	// [↓]
		else if ( #k == 0x25 ) fold; 	// [←]
		else if ( #k == 0x27 ) unfold;	// [→]
		else if ( #k == 0x1b ) break;	//[esc]
		else if ( #k == 0x20 ) if (folded) unfold; else fold; //space
		else if ( #k == 0x21 ) prevpage; //pageup
		else if ( #k == 0x22 ) nextpage; //pagedown
		else if ( #k == 0x24 ) prevfoldable; //home
		else if ( #k == 0x23 ) nextfoldable; //home
		else if ( #k == 0x0d )
			if (rangeeditmode == 0 ) rangeeditin;
			else rangeeditout; //enter
		else if ( #k == 0x31 ) unfoldall; //[1]
		else if ( #k == 0x32 ) foldall; //[2]
		else if ( #k == 0x48 )
			message ""
				+ "↑・↓\tカーソル移動\n"
				+ "←・→\t折りたたみ・展開\n"
				+ "Space\t折りたたみ・展開 切り替え\n"
				+ "Enter\t部分編集モード\n"
				+ "Esc\t終了\n"
			, "折りたたみ操作モードのキー操作"
			;
		else if ( #k != 0    ) beep;
		sleep 20;
	}
endmacro;

