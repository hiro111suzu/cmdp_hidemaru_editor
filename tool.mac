		} else {
			gofileend;
		}
		insertfile $fn_lib;
	}
endmacro;

//. 共通サブルーチンライブラリ ==============
//- @共通ライブラリ編集{commonfunc:edit}
//- @共通ライブラリ挿入{commonfunc}

//.. prep_dlls
prep_dlls:
	call dll_path "ht_tools";
	$httools = $$return;
	call dll_path "macrodll";
	$macrodll = $$return;
return;

//.. dll_path
dll_path:
	$$fn = getinistr( $fn_ini, "_config", "path_" + $$1 );
	if ( $$fn == "" ) {
		$$bit = "32";
		if ( platform & 0x00080000 )
			$$bit = "64";
		$$fn = currentmacrodirectory + "\\dll\\" + $$1 + "-" + $$bit + ".dll";
	}
	if ( ! existfile( $$fn ) ) {
		message "DLLファイルが見つかりません\n" + $$fn, "マクロ共通ライブラリ";
		endmacro;
	}
	return $$fn;
return;

//.. read_all_text
read_all_text:
	return member( member(
		createobject("Scripting.FileSystemObject") ,
		"OpenTextFile", $$1
	), "ReadAll" );

//.. env_expand
env_expand:
	$$1 = member(
		createobject("Scripting.FileSystemObject") ,
		"ExpandEnvironmentStrings", $$1
	);
return;

//.. split: 文字列分割
//- $$1 heystac, $$2 needle
split:
	##num = strstr( $$1, $$2 );
	if ( ##num == -1 ) {
		$split_l = $$1;
		$split_r = "";
		return;
	}
	$split_l = leftstr( $$1, ##num );
	$split_r = midstr( $$1, ##num + strlen( $$2 ) );
return;

//.. split2: 文字列分割 複数文字種バージョン
//- {tool_test hello world}{menu/edit
split2:
	$$repto = leftstr( $$2, 1 );
	loaddll "hmjre.dll";
	##num = strstr( 
		dllfuncstr( "ReplaceRegular", "[" + $$2 + "]", $$1, 0, $$repto, 1 ) ,
		$$repto
	);
	if ( ##num == -1 ) {
		$split_l = $$1;
		$split_r = "";
	} else {
		$split_l = leftstr( $$1, ##num );
		$split_r = midstr( $$1, ##num + 1 );
	}
return;

//.. get_left_term: 前から順に取り出す デフォルト空白区切り
//- $$1 heystac, $$2 needle
get_left_term:
	$$sep = $$2;
	if ( $$sep == "" )
		$$sep = " ";
	##num = strstr( $$1, $$sep );
	if ( ##num == -1 ) {
		//- 最後のterm;
		$$ret = $$1;
		$$1 = "";
	} else {
		$$ret = leftstr( $$1, ##num );
		$$1 = midstr( $$1, ##num + strlen( $$sep ) );
	}
	$rest = $$1;
	return $$ret;

//.. trim
trim:
	loaddll $httools;
	$$1 = dllfuncstr( "Trim", $$1 );
return;

//.. redo_on_mail_main: メールメイン画面じゃなかったら、やりなおし
redo_on_mail_main:
	if ( (platform & 0x00800000) != 0 ) {
		loaddll "TKInfo.dll";
		if ( result && dllfunc( "IsHidemaruMailMain" ) ) return;
	}
	openreg "CURRENTUSER", "Software\\Hidemaruo\\TuruKame\\Config";
	$dn = getregstr( "Turukamedir" );
	if ( $dn == "" ) {
		message "秀丸メールが見つかりません";
		endmacro;
	}
	run  $dn + "Turukame.exe"
		+ " /x " + currentmacrofilename
		+ " /a " + getarg(0)
		+ " /a " + getarg(1)
	;
	call dbginfo "秀丸メールでやりなおし";
	endmacro;
return;

//.. open_find
open_find:
	openfile  "/sR,\"" + $$2 + "\" " + $$1;
	if ( ! result )
		message "ファイルが見つかりません\n" + $$1;
	call dbginfo "検索: " + $$2;
goto end;

//.. dbginfo
dbginfo:
	if ( $debug_str == "" ) {
		#debug_mode = getininum(
			currentmacrodirectory + "\\cmdp.ini",
			"_config",
			"debug_mode"
		);
		debuginfo #debug_mode;
		$a[-1] = "停止";
		$a[0] = "ステータスバー";
		$a[1] = "出力モニタ";
		$a[2] = "アウトプット枠";
		$debug_str = $a[ #debug_mode ];
	}
	if ( 1 < #debug_mode ) {
		$msg = "[" + currentmacrobasename + "]";
		if ( $$1 != "" ) $msg = $msg + " "  + $$1;
		if ( $$2 != "" ) $msg = $msg + ", " + $$2;
		if ( $$3 != "" ) $msg = $msg + ", " + $$3;
		if ( $$4 != "" ) $msg = $msg + ", " + $$4;
		if ( $$5 != "" ) $msg = $msg + ", " + $$5;
		if ( $$6 != "" ) $msg = $msg + ", " + $$6;
		if ( $$7 != "" ) $msg = $msg + ", " + $$7;
		if ( $$8 != "" ) $msg = $msg + ", " + $$8;
		if ( $$9 != "" ) $msg = $msg + ", " + $$9;
		debuginfo $msg + "\x0A";
	} else if ( #debug_mode == 0 ) {
		//- statusbar 
		if ( $statusbar_txt == "" )
			$statusbar_txt = currentmacrobasename;
		$statusbar_txt = $statusbar_txt + ", " + $$1;
		title $statusbar_txt, 1;
		title -1, 1;
	}
return;

